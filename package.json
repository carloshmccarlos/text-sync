{
	"name": "textsync-clipboard",
	"description": "Online clipboard and cross-device text synchronization application",
	"private": true,
	"type": "module",
	"scripts": {
		"deploy": " vite build && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface Env",
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "eslint .",
		"format": "prettier --write .",
		"check-types": "tsc --noEmit",
		"check": "pnpm format && pnpm lint && pnpm check-types",
		"db": "drizzle-kit",
		"deps": "pnpm dlx taze@latest major -Ilw",
		"ui": "pnpm dlx shadcn@latest",
		"auth:secret": "pnpm dlx @better-auth/cli@latest secret",
		"auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./src/lib/auth/index.ts --y --output ./src/lib/db/schema/auth.schema.ts && prettier --write ./src/lib/db/schema/auth.schema.ts"
	},
	"dependencies": {
		"@electric-sql/client": "^1.0.14",
		"@electric-sql/react": "^1.0.14",
		"@neondatabase/serverless": "^1.0.2",
		"@netlify/vite-plugin-tanstack-start": "^1.1.2",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@supabase/supabase-js": "^2.75.0",
		"@t3-oss/env-core": "^0.13.8",
		"@tanstack/db": "^0.1.12",
		"@tanstack/electric-db-collection": "^0.1.35",
		"@tanstack/query-core": "^5.90.5",
		"@tanstack/query-db-collection": "^0.2.32",
		"@tanstack/react-db": "^0.1.33",
		"@tanstack/react-query": "^5.90.5",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-router": "^1.133.3",
		"@tanstack/react-router-devtools": "^1.133.3",
		"@tanstack/react-router-with-query": "^1.130.17",
		"@tanstack/react-start": "^1.133.5",
		"@vitejs/plugin-react": "^4.7.0",
		"better-auth": "^1.3.27",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"i18next": "^25.6.0",
		"i18next-browser-languagedetector": "^8.2.0",
		"lucide-react": "latest",
		"next-themes": "^0.4.6",
		"postgres": "^3.4.7",
		"qrcode": "^1.5.4",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-i18next": "^15.7.4",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"valibot": "^1.1.0",
		"vite": "^7.1.10",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@cloudflare/vite-plugin": "^1.13.13",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^24.8.1",
		"@types/qrcode": "^1.5.5",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"babel-plugin-react-compiler": "latest",
		"drizzle-kit": "^0.31.5",
		"tailwindcss": "^4.1.14",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
