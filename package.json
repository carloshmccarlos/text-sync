{
  "name": "textsync-clipboard",
  "description": "Online clipboard and cross-device text synchronization application",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": " vite build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface Env",
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "start": "node .output/server/index.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "check": "pnpm format && pnpm lint && pnpm check-types",
    "db": "drizzle-kit",
    "deps": "pnpm dlx taze@latest major -Ilw",
    "ui": "pnpm dlx shadcn@latest",
    "auth:secret": "pnpm dlx @better-auth/cli@latest secret",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./src/lib/auth/index.ts --y --output ./src/lib/db/schema/auth.schema.ts && prettier --write ./src/lib/db/schema/auth.schema.ts"
  },
  "dependencies": {
    "@electric-sql/client": "^1.0.10",
    "@electric-sql/react": "^1.0.10",
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.57.4",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/db": "^0.1.12",
    "@tanstack/electric-db-collection": "^0.1.19",
    "@tanstack/query-core": "^5.87.4",
    "@tanstack/query-db-collection": "^0.2.16",
    "@tanstack/react-db": "^0.1.17",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.87.4",
    "@tanstack/react-router": "^1.131.41",
    "@tanstack/react-router-devtools": "^1.131.41",
    "@tanstack/react-router-with-query": "^1.130.17",
    "@tanstack/react-start": "^1.131.41",
    "@vitejs/plugin-react": "^4.7.0",
    "better-auth": "^1.3.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "latest",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "valibot": "^1.1.0",
    "vite": "^7.1.5",
    "wrangler": "^4.35.0",
    "zod": "^3.25.76"
  },
  "pnpm": {
    "overrides": {
      "@tanstack/db": "^0.1.11"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/eslint-plugin-query": "^5.86.0",
    "@tanstack/eslint-plugin-router": "^1.131.2",
    "@types/node": "^24.3.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "babel-plugin-react-compiler": "latest",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "rc",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
